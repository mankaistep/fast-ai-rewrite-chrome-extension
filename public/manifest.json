{
  "manifest_version": 3,
  "name": "Fast AI Rewrite",
  "version": "1.0",
  "description": "Quickly rewrite selected text using AI",
  "permissions": [
    "activeTab",
    "cookies"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content_script.css"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["token-listener.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}