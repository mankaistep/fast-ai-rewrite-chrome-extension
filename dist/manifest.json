{
  "manifest_version": 3,
  "name": "Fast AI Rewrite",
  "version": "1.0",
  "description": "Quickly rewrite text using AI",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}